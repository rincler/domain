{
    "name": "rincler/domain",
    "description": "Domain name value object",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Rincler\\Domain\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rincler\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=7.3.0",
        "ext-intl" : "*",
        "ext-mbstring" : "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.5",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "scripts": {
        "test": "phpunit",
        "check-code-style": "php-cs-fixer fix --dry-run --verbose"
    }
}
